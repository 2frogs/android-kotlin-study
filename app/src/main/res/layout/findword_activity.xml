<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".findword.FindWordMainActivity">

    <RelativeLayout
        android:layout_width="304dp"
        android:layout_height="509dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <EditText
            android:id="@+id/textEdit"
            android:layout_width="214dp"
            android:layout_height="120dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:inputType="textMultiLine"
            android:visibility="visible"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="55dp" />

        <Button
            android:id="@+id/btnFind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="fwClick"
            android:text="Find"
            tools:layout_editor_absoluteX="179dp"
            tools:layout_editor_absoluteY="185dp"
            android:layout_below="@+id/textEdit"
            android:layout_alignRight="@+id/textEdit"
            android:layout_alignEnd="@+id/textEdit"
            android:layout_marginTop="15dp" />

        <TextView
            android:id = "@+id/wordText"
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:layout_below="@id/btnFind"
            android:textIsSelectable="true"
            android:scrollbars="vertical"/>

    </RelativeLayout>




</android.support.constraint.ConstraintLayout>
